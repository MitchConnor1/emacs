Employe::Employe(string _nom,string _prenom,int _age, int _anciennete){
  nom=_nom;
  prenom=_prenom;
  age=_age;
  anciennete=_anciennete;
}

Employe::~Employe(){
  cout<<"Un employé a été viré, longue vie à l'entreprise"<<endl;
}

