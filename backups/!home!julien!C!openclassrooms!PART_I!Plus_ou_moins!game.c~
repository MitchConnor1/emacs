#include "game.h"
#include <stdio.h>
#include <stdlib.h>


int set_mode(){
  printf("Choisir votre mode de jeu : \n");
  printf("1. Mode un joueur.\n2. Mode deux joueurs.\n\nEntrez votre choix : ");
  int choix=3;
  while (choix != 1 || choix != 2){
    scanf("%d",&choix);}
  if (choix == 2){
    return (0);
  }
  return 1;
}
