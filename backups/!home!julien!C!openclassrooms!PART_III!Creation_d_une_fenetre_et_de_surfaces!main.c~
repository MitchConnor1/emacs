#include <stdio.h>
#include <stdlib.h> //d√©fini EXIT_FAILUTE et EXIT_SUCCESS
#include <SDL/SDL.h>


void pause();

int main(){

  SDL_Surface *screen = NULL;
  SDL_Rect position;
  int i = 0;

  if (SDL_Init(SDL_INIT_VIDEO) == -1){

    fprintf(stderr, "Couldn't load sdl : %s. Abort\n", SDL_GetError());
    exit(EXIT_FAILURE);

  }

  if ( (screen = SDL_SetVideoMode(640, 512, 32, SDL_HWSURFACE) ) == NULL){

    fprintf(stderr, "Couldn't set video mode : %s. Abort.\n", SDL_GetError());
    exit(EXIT_FAILURE);

  }


  for (i = 0; i < 256; i++){
    SDL_Surface *line = NULL;
    line = SDL_CreateRGBSurface(SDL_HWSURFACE, screen -> w, 2, 32, 0, 0, 0, 0);

    SDL_FillRect(line, NULL, SDL_MapRGB(screen -> format, i, i, i));
    position.x = 0;
    position.y = i*2;
    SDL_BlitSurface(line, NULL, screen, &position);
    SDL_FreeSurface(line);
  }
  
  SDL_Flip(screen);
  pause();

  // for (i = 0; i < 256; i++){

  //    SDL_FreeSurface(lines[i]);
  // }
  SDL_Quit();
  return (EXIT_SUCCESS);

}

void pause(){

  int continuer = 1;
  SDL_Event event;

  while (continuer){

    SDL_WaitEvent(&event);
    switch(event.type){
    case SDL_QUIT:
      continuer = 0;
    }
  }
}
